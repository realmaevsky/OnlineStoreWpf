      Title="Start Page">
    <Grid>
        <Border CornerRadius="30" Background="{DynamicResource BackgroundGradient}" 
                BorderBrush="{DynamicResource pageBrushColor}" BorderThickness="1">
            <Border.Effect>
                <BlurEffect Radius="1"/>
            </Border.Effect>
            <Image Name="BoardStartPageImage" Source="/Res/Posters/buttonImg4.jpg" Margin="422,27,39,244">
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="5"
                                             Color="Black"
                                        Direction="315"
                                             Opacity="100"
                                             RenderingBias="Performance"
                                             ShadowDepth="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Border>
