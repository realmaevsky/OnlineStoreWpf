<Page x:Class="TopStoreApp.Pages.UserOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TopStoreApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="1080"
      Title="UserOrder" >

    <Border CornerRadius="30" Background="Transparent" 
                BorderBrush="{DynamicResource AnotherBackgroundGradient}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Direction="333" 
                                  ShadowDepth="3" 
                                  BlurRadius="5"/>
        </Border.Effect>
    </Border>
</Page>
