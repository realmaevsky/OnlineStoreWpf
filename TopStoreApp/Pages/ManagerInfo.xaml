<Page x:Class="TopStoreApp.Pages.ManagerInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TopStoreApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="1080"
      Title="ManagerInfo">

    <Border CornerRadius="30" Background="{DynamicResource BackgroundGradient}" 
            BorderBrush="{DynamicResource pageBrushColor}" BorderThickness="1">
        <Border.Effect>
            <BlurEffect Radius="1"/>
        </Border.Effect>
        <TextBlock Text="Менеджери" FontSize="30" Foreground="{DynamicResource FirstTextColor}" 
                   FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Border>


</Page>
